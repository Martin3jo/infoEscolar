<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs', {titulo: "Colegio Jorge Newbery", estilo:
  "style.css"})%>
  <body class="body-index">
    <header class="header-index">
      <div class="top-nav">
        <img src="/images/logoalt.png" alt="logo" />
      </div>
      <div class="logo-text">
        <h1>
          <div><a href="/">Colegio Secundario Ing. Jorge Newbery</a></div>
        </h1>
      </div>
    </header>
      </div>
    </header>
    <%- include('../partials/nav.ejs') %>
    <main class="main-publicacion">
        <section>
            <!--SEARCH-->
            <form action="/admin/productos/buscar" method="get" class="buscador-caja">
                <input class="buscador" type="search" name="buscar" placeholder="Buscador">
            </form>
            
        </section>
        <section>
        <a href=""><button type="button">Crear Producto</button></a>
        </section>
        <section class="productos-main-caja">
            
            <% for (let i=0; i < publicaciones.length; i++) { %>
                <div class="card shadow-lg" style="width: 18rem">
                    <div class="card-body">
                      <h5 class="card-title">Titulo</h5>
                      <h6 class="card-subtitle mb-2">Fecha</h6>
                      <h6 class="card-subtitle mb-2">Contenido</h6>
                      
                    </div>
                  </div>
                <article class="productos-caja">
                    <div class="productos-caja-2">
                        <div class="productos-caja-2-botones">
                            <a class="productos-caja-2-boton" href="/admin/modificarProducto/<%= productos[i].idproducto %>">Modificar</a>

                            <form action="/admin/productos/<%= productos[i].idproducto %>?_method=DELETE"
                                method="post"
                                class="productos-caja-2-boton">
                                <button >Borrar</button>
                            </form>
                        </div>
                    </div>
                    <div class="productos-caja-1">
                        <img class="avatar-imagen" src="/img/avatars/<%= productos[i].avatar %>"
                            alt="avatar">
                    </div>
                </article>
                <% } %>
        </section>
    </main>
    <%- include('../partials/footer.ejs')%>
  </body>
</html>

