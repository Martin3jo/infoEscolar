<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs', {titulo: "Colegio Jorge Newbery", estilo: "style.css"}) %>
  <body class="body-index">
    <%- include('../../partials/nav.ejs') %>
    <main class="main-publicacion">
        <section>
            <!--SEARCH-->
            <form action="/admin/usuarios/buscar" method="get" class="buscador-caja">
                <input class="buscador" type="search" name="buscar" placeholder="Buscador">
            </form>
        </section>
        <section>
            <a href=""><button type="button">Registrar Usuario</button></a>
        </section>
        <section class="productos-main-caja">
            <% if (usuarios.length === 0) { %>
                <p>No hay usuarios disponibles.</p>
            <% } else { %>
                <% for (let i=0; i < usuarios.length; i++) { %>
                    <div class="card shadow-lg" style="width: 18rem">
                        <div class="card-body">
                          <h5 class="card-title">Nombre: <%= usuarios[i].nombre %></h5>
                          <h6 class="card-subtitle mb-2">Email: <%= usuarios[i].email %></h6>
                          <h6 class="card-subtitle mb-2">Rol: <%= usuarios[i].rol %></h6>
                        </div>
                    </div>
                    <article class="productos-caja">
                        <div class="productos-caja-2">
                            <div class="productos-caja-2-botones">
                                <a class="productos-caja-2-boton" href="/admin/modificarUsuario/<%= usuarios[i].id %>">Modificar</a>
                                <form action="/admin/usuarios/<%= usuarios[i].id %>?_method=DELETE" method="post" class="productos-caja-2-boton">
                                    <button>Borrar</button>
                                </form>
                            </div>
                        </div>
                        <div class="productos-caja-1">
                            <img class="avatar-imagen" src="/img/avatars/<%= usuarios[i].avatar %>" alt="avatar">
                        </div>
                    </article>
                <% } %>
            <% } %>
        </section>
    </main>
    <%- include('../../partials/footer.ejs') %>
  </body>
</html>
