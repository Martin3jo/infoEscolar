<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs', {titulo: "Colegio Jorge Newbery", estilo: "style.css"})%>
  <body class="body-index">
    <%- include('../../partials/nav.ejs') %>
    <main class="main-publicacion">
      <section>
        <!--SEARCH-->
        <form
          action="/admin/productos/buscar"
          method="get"
          class="buscador-caja"
        >
          <input
            class="buscador"
            type="search"
            name="buscar"
            placeholder="Buscador"
          />
        </form>
      </section>
      <section >
        <form action="/usuario/perfil/publicacion/crearPublicacion">
        <button class="crear-producto primary" type="submit">Crear Publicacion</button>
      </form>
      </section>
      <section class="productos-main-caja">
        <% if (publicaciones.length === 0) { %>
        <p>No hay publicaciones disponibles.</p>
        <% } else { %> 
        <% for (let i = 0; i < publicaciones.length; i++) { %>
        <div class="card shadow-lg" style="width: 18rem">
          <div class="card-body">
            <h5 class="card-title"><%= publicaciones[i].titulo %></h5>
            <h6 class="card-subtitle mb-2"><%= publicaciones[i].fechaPublicacion %></h6>
            <p class="card-text"><%= publicaciones[i].contenido %></p>
          </div>
        </div>
        <article class="productos-caja">
          <div class="productos-caja-2">
            <div class="productos-caja-2-botones">
              <a
                class="productos-caja-2-boton"
                href="/usuario/perfil/publicacion/editar/<%= publicaciones[i].idPublicacion %>"
                >Modificar</a
              >
              <form
                action="/usuario/perfil/publicacion/borrar/<%= publicaciones[i].idPublicacion %>?_method=DELETE"
                method="post"
                class="productos-caja-2-boton"
              >
                <button>Borrar</button>
              </form>
            </div>
          </div>
          <div class="productos-caja-1">
            <img
              class="avatar-imagen"
              src="/img/avatars/<%= publicaciones[i].imagen %>"
              alt="avatar"
            />
          </div>
        </article>
        <% } %> 
        <% } %>
      </section>
    </main>
    <%- include('../../partials/footer.ejs')%>
    <script src="/js/adminProductos.js"></script>
    <script src="/js/admin.js"></script>
  </body>
</html>
