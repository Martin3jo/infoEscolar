<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs', {titulo: "Colegio Jorge Newbery", estilo: "style.css"})%>
  <body class="body-index">
    <%- include('../../partials/nav.ejs') %>
    <main class="main-publicacion">
      <section>
        <!--SEARCH-->
        <form
          action="/admin/productos/buscar"
          method="get"
          class="buscador-caja"
        >
          <input
            class="buscador"
            type="search"
            name="buscar"
            placeholder="Buscador"
          />
        </form>
      </section>
      <section >
        <a href="/usuario/perfil/publicacion/crear"><button class="crear-producto primary" type="button">Crear Publicacion</button></a>
      </section>
      <section class="productos-main-caja">
        <% if (publicaciones.length === 0) { %>
        <p>No hay publicaciones disponibles.</p>
        <% } else { %> 
        <% for (let i = 0; i < publicaciones.length; i++) { %>
        
        <article class="productos-caja">
          <div class="productos-caja-2">
            <div class="card shadow-lg">
              <div class="card-body">
                <h5 class="card-title"><%= publicaciones[i].titulo %></h5>
                <h6 class="card-subtitle mb-2"><%= new Date(publicaciones[i].fechaPublicacion).toLocaleDateString() %></h6>
                <p class="card-text"><%= publicaciones[i].contenido %></p>
              </div>
            </div>
            <div class="productos-caja-2-botones">
              <a
                class="productos-caja-2-boton"
                href="/usuario/perfil/publicacion/editar/<%= publicaciones[i].idPublicacion %>"
                >Modificar</a
              >
              <form
                action="/usuario/perfil/publicacion/borrar/<%= publicaciones[i].idPublicacion %>"
                method="post"
                class="productos-caja-2-boton"
              >
                <button>Borrar</button>
              </form>
              <form
                action="/usuario/perfil/publicacion/fijar/<%= publicaciones[i].idPublicacion %>"
                method="post"
                class="productos-caja-2-boton"
              >
                <button><%= publicaciones[i].esFijado ? 'Desfijar' : 'Fijar' %></button>
              </form>
            </div>
          </div>
          <div class="productos-caja-1">
            <% if (publicaciones[i].imagen) { %>
              <img class="imagenPublic" src="/uploads/<%= publicaciones[i].imagen %>" alt="Imagen de la publicaciÃ³n">
          <% } %>
            
        </div>
        </article>
        <% } %> 
        <% } %>
      </section>
    </main>
    <%- include('../../partials/footer.ejs')%>
    <script src="/js/adminProductos.js"></script>
    <script src="/js/admin.js"></script>
  </body>
</html>
